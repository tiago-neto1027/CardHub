<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.Cardhub" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Primary -->
        <item name="colorPrimary">@color/cardhub_blue_medium</item>
        <item name="colorPrimaryVariant">@color/cardhub_blue_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- BackGround -->
        <item name="colorSurface">@color/cardview_dark_background</item>
        <item name="android:colorBackground">@color/cardview_dark_background</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Tertiary -->
        <item name="colorTertiary">@color/red</item>
        <item name="colorOnTertiary">@color/white</item>

        <!-- Extra -->
        <item name="android:textColor">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:enforceNavigationBarContrast">true</item>
    </style>
</resources>